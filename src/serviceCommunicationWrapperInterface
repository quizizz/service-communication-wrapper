import { AxiosResponse, AxiosRequestConfig } from 'axios';

export interface ServiceCommunicationWrapperInterface {
  get(endpoint: string, headers?: Record<string, string>, config?: AxiosRequestConfig): Promise<any | null>;
  post(endpoint: string, data?: any, headers?: Record<string, string>, config?: AxiosRequestConfig): Promise<any | null>;
  put(endpoint: string, data?: any, headers?: Record<string, string>, config?: AxiosRequestConfig): Promise<any | null>;
  delete(endpoint: string, headers?: Record<string, string>, config?: AxiosRequestConfig): Promise<any | null>;
}